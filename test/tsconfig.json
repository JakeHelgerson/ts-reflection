{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "sourceMap": false,
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es6"],
    "plugins": [
      { "transform": "ts-type-checked/transformer", "logLevel": "normal" },
    ]
  },
  "exclude": ["node_modules"],
  "include": ["__tests__/*.spec.ts","__tests__/*.spec.tsx"]
}